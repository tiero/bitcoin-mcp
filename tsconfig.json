{
  "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "examples"
  ]
}